{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clusterName": {
            "type": "string",
            "defaultValue": "demo-aks-cluster",
            "metadata": {
                "description": "Name of the managed cluster resource"
            }
        },

        "region": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location of the managed cluster resource"
            }
        },

        "clusterVersion": {
            "type": "string",
            "defaultValue": "1.17.9",
            "metadata": {
                "description": "Version of the managed kubernetes cluster"
            }
        },

        "agentNodeCount": {
            "type": "int",
            "defaultValue": "3",
            "metadata": {
                "description": "The number of nodes for the cluster"
            }       
         },

         "agentNodeSize": {
             "type": "string",
             "defaultValue": "Standard_DS2_v2",
             "metadata": {
                "description": "Size of the agent Node"
             }
         },

         "osType": {
             "type": "string",
             "defaultValue": "Linux",
             "allowedValues": [
                 "Linux",
                 "Windows"
             ],
             "metadata": {
                 "descrition": "Type of the operating system"
             }
         },

        "dnsPrefix": {
            "type": "string",
            "defaultValue": "demo",
            "metadata": {
                "description": "DNS prefix to use with hosted Kubernetes API server FQDN"
            }
        },

        "linuxAdminUserName": {
            "type": "string",
             "metadata": {
                 "description": "User name for the Linux Virtual Machines"
             }
        },

        "sshRSAPublicKey": {
            "type": "string",
            "metadata": {
                "description": "SSH RSA public key string"
            }
        },

        "servicePrincipalClientID": {
            "type": "securestring",
            "metadata": {
                "description": "Client ID (used by cloudprovider)"
            }
        },

        "servicePrincialClientSecret": {
            "type": "securestring",
            "metadata": {
                "description": "Service Principal Client Secret"
            }
        }
        
    },
    "variables": {
        "templateLink": "https://github.com/jha-raghav/aks-cluster-armtemplate/blob/master/aks-kubernetes-cluster.json"
    },
    "resources": [
 {
     "name": "nestedDeployment1",
     "type": "Microsoft.Resources/deployments",
     "apiVersion": "2019-10-01",
     "properties": {
         "expressionEvaluationOptions": {
             "scope": "outer"
         },
         "mode": "Incremental",
         "templateLink": {
             "uri": "[variables('templateLink')]",
             "contentVersion": "1.0.0.0"
         }
     }
 }

    ],
    "outputs": {
        "controlPlaneFQDN": {
            "type": "string",
            "value": "[reference(parameters('clusterName')).fqdn]"
    }
    }
}
